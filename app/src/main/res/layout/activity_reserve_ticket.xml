<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/movieSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:background="#DAFFFFFF" />

    <Spinner
        android:id="@+id/cinemaSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#DAFFFFFF" />

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#DAFFFFFF" />

    <Button
        android:id="@+id/pickDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cinemaSpinner"
        android:layout_centerHorizontal="true"
        android:text="SELECT DATE" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickDateBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#65FDFDFD"
        android:text="date"
        android:textSize="30sp" />

    <Button
        android:id="@+id/addSeat"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSpinner"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/seatNo"
        android:text="+" />

    <Button
        android:id="@+id/removeSeat"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSpinner"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/seatNo"
        android:text="-" />

    <TextView
        android:id="@+id/seatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#65FDFDFD"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/confirmReserve"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/removeSeat"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="CONFIRM"
        tools:text="CONFIRM" />

</RelativeLayout>