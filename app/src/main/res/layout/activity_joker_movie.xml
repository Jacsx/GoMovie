<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1010D4B"
    tools:context=".Selection">

    <ImageView
        android:id="@+id/jokerImg"
        android:layout_width="202dp"
        android:layout_height="219dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/jokermovie" />

    <TextView
        android:id="@+id/jokertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jokerImg"
        android:layout_centerHorizontal="true"
        android:text="JOKER"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/tillana" />

    <TextView
        android:id="@+id/jokerstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jokertitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Starring: Joaquin Phoenix"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/tillana" />

    <Button
        android:id="@+id/jokerReserve"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jokerstar"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="RESERVE TICKETS" />

    <Button
        android:id="@+id/jokerCancel"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jokerstar"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="CANCEL" />

</RelativeLayout>